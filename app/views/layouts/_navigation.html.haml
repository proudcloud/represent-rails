=# link_to image_tag("represent.png"), root_path, :class => 'brand'
= link_to @global_settings.site_name, root_path, :class => 'brand'
%ul.navbar-text.pull-right
  - if user_signed_in?
    Welcome
    = "#{current_user.email}!"
    &nbsp;|&nbsp;
    = link_to "LOG-OUT", destroy_user_session_path, method: :delete
    
  - else
    %li
      = link_to('Login', new_user_session_path)

%ul.nav
  %li
    = link_to places_path do
      %i.icon-map-marker.icon-white
      Places
  %li
    = link_to "#" do
      %i.icon-user.icon-white
      Users
  %li
    = link_to settings_path do
      %i.icon-cog.icon-white
      Settings

    = javascript_include_tag "form"
